  var str = '';
  $('#country').change(function() {
    $('select option:selected').each(function() {
      str += $(this).val();
    });
  });


  $(document).ready(function() {
    $('#submit').click(function() {
      var path = $('#country').val();
      window.location.assign("/locations/" + str);
    });
  });


</script>
