<br>
<div class='row'>
  <div class='small-3 large-3 columns'>
    <div id='sidebar-left'>
      <div class='info'>
        <h2><%= @location.name %></h2><br>
        <ul class="side-nav">
          <li class='small button' id='button'><%= link_to 'Add Photo', new_location_photo_path(@location) %></li>
          <li class='small button' id='button'><%= link_to 'Add Comment', new_location_comment_path(@location) %></li>
          <h5>Comments</h5>
          <div class='comments'>
            <ul class='small-block-grid-1 large-block-grid 1'>
              <% @location.comments.order(created_at: :desc).limit(30).each do |comment| %>
                <div class='panel'>
                  <div class='media'>
                    <div class='media-img'>
                      <img src='<%= comment.user.avatar.url("avatar") %>'>
                    </div>
                    <h6><%= comment.user.full_name %></h6>
                    <p><%= comment.body %></p>
                  </div>
                </div>
              <% end %>
            </ul>
          </div>
        </ul>
      </div>
    </div>
  </div>


  <div class='small-9 large-9 columns text-center'>
    <%= paginate @photos %>
    <div class='photos'>
      <ul class='small-block-grid-1 large-block-grid 1'>
        <% @photos.order(created_at: :desc).each do |photo| %>
          <li>
            <%= link_to image_tag(photo.image_url('show')), photo %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
