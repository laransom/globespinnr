<br>
<div class='row'>
  <div class='small-3 large-3 columns'>
    <div id='sidebar-left'>
      <div class='info'>
        <h2><%= @location.name %></h2><br>

        <ul class="side-nav">
          <li><%= link_to 'Add Photo', new_location_photo_path(@location) %></li>
          <li><%= link_to 'Add Comment', new_location_comment_path(@location) %></li>
          <h5>Comments</h5>
          <% @location.comments.each do |comment| %>
            <li><%= comment.body %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>



  <div class='small-9 large-9 columns text-center'>
    <div id='photos'>
      <div class='content'>
        <ul class='small-block-grid-1 medium-block-grid-1 large-block-grid 1'>
          <% @location.photos.each do |photo| %>
            <li><%=link_to image_tag(photo.image_url('show')), photo %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
